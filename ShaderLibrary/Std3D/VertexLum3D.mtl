#Vertex
Input
{
    float Luminance;
}

Output
{
    vec4 Color
}

Code
{
    void main()
    {
        MaterialInstance mi=GetMI();

        Output.Color=Luminance*mi.Color;

        gl_Position=GetPosition3D();
    }
}

#Fragment

Output
{
    vec4 Color;
}

Code
{
    void main()
    {
        Color=Input.Color;
    }
}
